---
interface Props {
  items: { label: string; href?: string }[];
}
const { items } = Astro.props;
---

<nav class="text-sm text-slate-500 mb-6 flex items-center flex-wrap gap-1">
  <a href="/" class="hover:text-red-400 transition-colors">Home</a>
  {items.map((item) => (
    <>
      <span class="mx-1">/</span>
      {item.href ? (
        <a href={item.href} class="hover:text-red-400 transition-colors">{item.label}</a>
      ) : (
        <span class="text-slate-300">{item.label}</span>
      )}
    </>
  ))}
</nav>
